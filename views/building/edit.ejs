<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../head'); -%>
</head>
<body>
    <section id="container">
        <!-- **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        *********************************************************************************************************************************************************** -->
        <!--header start-->
        <%- include('../header'); -%>


        <!--sidebar end-->
        <!-- main content -->
    </section>
    <section id="main-content" class="">
        <section class="wrapper">
          <h3><i class="fa fa-angle-right"></i> Cập nhật </h3>
          <div class="mt">
    
            <!-- page start-->
            <div class="col-lg-12">
              <form method="post" action="/admin/building_service/update/<%= building._id%>">
                <div class="form-group">
                    <label>Tên công ty viết tắt:</label>
                    <input type="text" name="short_name" class="form-control" value="<%= building.short_name %>" required maxlength="50">
                  </div>
                  <div class="form-group">
                    <label>Tên công ty:</label>
                    <input class="form-control" name="full_name" value="<%= building.full_name %>" required maxlength="50">
                  </div>
                  <div class=" form-group">
                    <label for="Content">Mô tả công ty:</label>
                    <textarea name="desc" id="editor1"  ><%= building.desc %></textarea>
                    <script>
                        CKEDITOR.replace('editor1');
                    </script>
                </div>
                  <div class="form-group">
                    <label>Địa chỉ:</label>
                    <input class="form-control" name="address" value="<%= building.address %>" required maxlength="50">
                  </div>
                  <div class="form-group">
                      <label>Phone number:</label>
                      <input class="form-control" name="phone_number" value="<%= building.phone_number %>" required maxlength="50">
                    </div>
                    <div class="form-group">
                      <label>Email:</label>
                      <input class="form-control" name="email" value="<%= building.email %>" required maxlength="50">
                    </div>
                    <div class="form-group">
                      <label>Tên người bán:</label>
                      <input class="form-control" name="ceo_building" value="<%= building.ceo_building %>" required maxlength="50">
                    </div>
                 
      
                <button type="submit" class="btn btn-primary">Cập nhật</button>
              </form>
            </div>
    
            <!-- page end-->
          </div>
          <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
    <!--footer start-->

    <!--footer end-->
    </section>
