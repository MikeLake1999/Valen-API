    <section id="main-content" class="">
        <section class="wrapper">
          <h3><i class="fa fa-angle-right"></i> Cập nhật </h3>
          <div class="mt">
    
            <!-- page start-->
            <div class="col-lg-12">
              <form method="post" action="/building/apartment_service/update/<%= apartment._id%>">
                <input class="" value="<%= apartment. apartment_building.id %>" name="id" required maxlength="50">
                <div class="form-group">
                    <label>Tên căn hộ:</label>
                    <input type="text" name="apt_name" class="form-control" value="<%= apartment.apt_name %>">
                  </div>
                  <div class="form-group">
                    <label>Địa chỉ:</label>
                    <input class="form-control" name="address" value="<%= apartment.address %>">
                  </div>
                  <div class="form-inline">
                  <div class="form-group" style="width: 15%!important;">
                    <label>Tổng số phòng:</label>
                    <input class="form-control" name="rooms_count" value="<%= apartment.rooms_count %>">
                  </div>
                  
                  <div class="form-group" style="width: 15%!important;">
                    <label>Số phòng ngủ:</label>
                    <input class="form-control" name="bedrooms_count" value="<%= apartment.bedrooms_count %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;">
                    <label>Số nhà vệ sinh:</label>
                    <input class="form-control" name="bathrooms_count" value="<%= apartment.bathrooms_count %>">
                  </div>
                  </div>
                  <div class="form-inline">
                  <div class="form-group" style="width: 15%!important;">
                    <label>Diện tích:</label>
                    <input class="form-control" name="area" value="<%= apartment.area %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;">
                    <label>Diện tích sử dụng:</label>
                    <input class="form-control" name="area_builtin" value="<%= apartment.area_builtin %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;">
                    <label>Thang máy:</label>
                    <input class="form-control" name="elavator" value="<%= apartment.elavator %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;" >
                    <label>Hướng:</label>
                    <input class="form-control" name="direction" value="<%= apartment.direction %>">
                  </div>
                  </div>
                  <div class="form-inline">
                  <div class="form-group" style="width: 15%!important;">
                    <label>Giá tiền:</label>
                    <input class="form-control" name="price" value="<%= apartment.price %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;">
                    <label>Giá thuê:</label>
                    <input class="form-control" name="price_rent" value="<%= apartment.price_rent %>">
                  </div>
                  </div>
                  <div class="form-inline">
                  <div class="form-group" style="width: 15%!important;">
                    <label>Trạng Thái:</label>
                    <input class="form-control" name="apt_status" value="<%= apartment.apt_status %>">
                  </div>
                  <div class="form-group" style="width: 15%!important;">
                    <label>Loại hình:</label>
                    <input class="form-control" name="stype_code" value="<%= apartment.stype_code %>">
                  </div>
                  <!-- <div class="form-group" >
                    <label>Hình ảnh:</label>
                    <input  type="file" name="multi-files" value="<%= apartment.apartment_img %>" multiple id="files" class="form-control-file border"/>
                      <hr />
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="preview-images"></div>
                        </div>
                      </div>
                  </div> -->
                  </div>
                  <div class=" form-group">
                    <label for="Content">Mô tả căn hộ:</label>
                    <textarea name="apt_desc" id="editor1"  ><%= apartment.apt_desc  %></textarea>
                    <script>
                        CKEDITOR.replace('editor1');
                    </script>
                </div>
                 
                <button type="submit" class="btn btn-primary">Cập nhật</button>
              </form>
            </div>
    
            <!-- page end-->
          </div>
          <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
    <!--footer start-->

    <!--footer end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <!--script for this page-->
    <script>
        $(document).ready(function() {
  if (window.File && window.FileList && window.FileReader) {
    $("#files").on("change", function(e) {
      var files = e.target.files,
        filesLength = files.length;
      for (var i = 0; i < filesLength; i++) {
        var f = files[i]
        var fileReader = new FileReader();
        fileReader.onload = (function(e) {
          var file = e.target;
          $("<span class=\"pip\">" +
            "<img class=\"imageThumb\" src=\"" + e.target.result + "\" title=\"" + file.name + "\"/>" +
            "<br/><span class=\"remove\">Remove image</span>" +
            "</span>").insertAfter("#files");
          $(".remove").click(function(){
            $(this).parent(".pip").remove();
          });
          
       
          
        });
        fileReader.readAsDataURL(f);
      }
    });
  } else {
    alert("Your browser doesn't support to File API")
  }
});
      </script>

</body>

